<!DOCTYPE html>
<html lang="de">
  <head>
    {Application.get_env(:live_debugger, :live_debugger_tags)}
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <link rel="icon" type="image/webp" href={~p"/images/logo_w.webp"} />
    <link rel="sitemap" type="application/xml" title="Sitemap" href={~p"/sitemap.xml"} />
    <%= if html = System.get_env("HEAD_INJECTED_HTML") do %>
      <%= raw(html) %>
    <% end %>

    <SEO.juice
      conn={@conn}
      config={WortwildnisWeb.SEO.config()}
      page_title={assigns[:page_title]}
    />
    <%= if @conn && SEO.item(@conn) && is_map(SEO.item(@conn)) && Map.get(SEO.item(@conn), :noindex) do %>
      <meta name="robots" content="noindex, follow" />
    <% end %>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          localStorage.setItem("phx:theme", theme);
          document.documentElement.setAttribute("data-theme", theme);
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
  </head>
  <body>
    {@inner_content}
  </body>
</html>
